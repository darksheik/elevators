require 'Elevator'

class Bank
  attr_accessor :elevators
  attr_reader :ELEVATOR_COUNT
  
  ELEVATOR_COUNT = 4

  # A singleton class which will hold all of the elevators
  def initialize
    @elevators = Array.new
    ELEVATOR_COUNT.times { add_elevator }
  end
  def add_elevator
    elevator = Elevator.new
    @elevators << elevator
  end

end
